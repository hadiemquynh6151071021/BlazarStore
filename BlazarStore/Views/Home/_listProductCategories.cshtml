@model PagedList.IPagedList<BlazarStore.Models.Product>
@using PagedList.Mvc

<div class="product-grid" data-isotope='{ "itemSelector": ".product-item", "layoutMode": "fitRows" }'>
    @foreach (var item in Model)
    {
        <div class="product-item men">
            <div class="product discount product_filter">
                <div class="product_image">
                    <img src=@item.Image_URL alt="">
                </div>
                <div class="favorite favorite_left"></div>
                @*<div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-$20</span></div>*@
                <div class="product_info">
                    <h6 class="product_name"><a href="single.html">@item.Description</a></h6>
                    <div class="product_price">$@item.Discount_Price__in_Rs__<span>$@item.Original_Price__in_Rs__</span></div>
                </div>
            </div>
            <div class="red_button add_to_cart_button"><a href="#">add to cart</a></div>
        </div>
    }
</div>

<div class="pagination">
        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("RenderProduct", new { id = "Women", page }))
</div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.isotope/3.0.6/isotope.pkgd.min.js"></script>
